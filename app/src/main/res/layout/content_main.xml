<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.drexel.engr103grp061_02.pillreminder.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:contextClickable="false"
        android:clickable="true"
        android:enabled="true"
        android:nestedScrollingEnabled="false"
        android:onClick="startAct"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/newPill"
        android:layout_toEndOf="@+id/newPill" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Issue Note"
        android:id="@+id/button2"
        android:clickable="true"
        android:enabled="true"
        android:onClick="testNotify"
        android:layout_below="@+id/deletePill"
        android:layout_toLeftOf="@+id/deletePill"
        android:layout_toStartOf="@+id/deletePill"
        android:layout_marginTop="120dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Pill"
        android:id="@+id/editPill"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:enabled="true"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Pill"
        android:id="@+id/newPill"
        android:layout_below="@+id/editPill"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:enabled="true"
        android:clickable="true"
        android:onClick="startAddAct" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Pill"
        android:id="@+id/deletePill"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/newPill"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:enabled="true"
        android:onClick="startDeleteAct" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Notifications"
        android:id="@+id/clearNote"
        android:clickable="true"
        android:enabled="true"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:onClick="clearNotifications" />

</RelativeLayout>
